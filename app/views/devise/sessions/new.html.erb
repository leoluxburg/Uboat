<div class="container" style="padding-top: 100px;">
  <div style="background-color: white; padding: 30px;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <br>
    <h2><i class="fas fa-user" style="color: #2078AD;"></i> Inicio de Sesion</h2>
    <hr>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      <hr>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-boat' %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
  </div>
</div>
