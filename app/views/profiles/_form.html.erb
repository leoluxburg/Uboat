
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-8">
         <%= f.input :nombre_completo %>
      </div>
      <div class="col-md-4">
        <%= f.input :telefono %>
      </div>
    </div>
    <div class="row">
      <%= f.input :photo, as: :file %>
    </div>
    <div class="row">
      <div class="col-md-4">
         <%= f.input :nacionalidad, :collection => @countries %>
      </div>
      <div class="col-md-4">
        <%= f.input :fecha_de_nacimiento, start_year: Time.now.year - 100,
  end_year: Time.now.year,
  order: %i(day month year) %>
      </div>
    </div>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, 'Guardar Perfil', class: 'btn btn-boat' %>
  </div>
<% end %>
