<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style=" padding-left: 20px; padding-right: 20px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto" style="padding-top: 8px;>

          <li class="nav-item active">
            <%= link_to "Home", "/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Categorias", "/artworks", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Cobertura", "/profiles", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Nosotros", "/nosotros", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contacto", "/contact", class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item dropdown" >
           <h4 style="color: #2078AD;" class="avatar nav-link" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i></h4>
           <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user.admin === true %>
              <a href="/admin" target="_blank" class="dropdown-item">Administrador</a>
              <a href="/categories" class="dropdown-item">Categorias</a>
              <% end %>
              <% if current_user.artist === true %>
              <%= link_to "Perfil", "/", class: "dropdown-item" %>
              <% end %>
              <%= link_to "Pedidos", "/", class: "dropdown-item" %>
              <%= link_to "Log out", "/", class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
        <li class="nav-item">
            <a href="/users/sign_in" class="nav-link text-uppercase " style="padding-right: 15px;"> <h4 style="color: #2078AD;"> <i class="fas fa-shopping-basket"></i> </h4></a>
          </li>
          <li class="nav-item">
            <a href="/users/sign_in" class="nav-link text-uppercase" style="padding-right: 15px;"> <h4 style="color: #2078AD;"><i class="fas fa-user"></i></h4></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
